<main class="contenedor">
    <form action="/vacants/new" method="POST" class="default-form">
        <h3>General Information</h3>

        <div class="campo">
            <label for="title">Title</label>
            <input type="text" name="title" placeholder="Eg: React Developer" required>
        </div>
        <div class="campo">
            <label for="company">Company</label>
            <input type="text" name="company" placeholder="Eg: Facebook, Twitter..." required>
        </div>
        <div class="campo">
            <label for="ubication">Ubication</label>
            <input type="text" name="ubication" placeholder="Eg: Colombia, Mexico, Remote..." required>
        </div>
        <div class="campo">
            <label for="salary">Salary (USD)</label>
            <input type="text" name="salary" placeholder="Eg: $500 USD" required>
        </div>
        <div class="campo">
            <label for="contract">Contract</label>
            <select name="contract">
                <option value="" disabled selected>-- Select an option --</option>
                <option value="freelance">Freelance</option>
                <option value="full">Full time</option>
                <option value="halftime">Halftime</option>
                <option value="by project">By project</option>
            </select>
        </div>
        <h3>Vacant Description</h3>
        <div class="campo descripcion">
            <label>Description</label>
            <input type="hidden" id="x" name="description">
            <trix-editor input="x"></trix-editor>
        </div>

        <h3>Knowledges</h3>

        <ul class="lista-conocimientos">
            {{#selectSkills a}}
            {{/selectSkills}}
        </ul>

        <div class="campo centrar-horizontal">
            <input type="hidden" name="skills" id="skills">
            <input type="submit" value="publish" class="btn btn-azul">
        </div>
    </form>
</main> 